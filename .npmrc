# Ignore scripts for security and compatibility
better-sqlite3:ignore-scripts=true
sharp:ignore-scripts=true

# Performance optimizations
cache-max=1000000000
prefer-offline=true
audit-level=moderate

# Security settings
fund=false
audit=true

# Package resolution
save-exact=true
package-lock=true

# Registry settings
registry=https://registry.npmjs.org/

# Logging
loglevel=warn

# Electron compatibility
target_platform=win32
target_arch=x64
runtime=electron
disturl=https://electronjs.org/headers

# Build settings for native modules
msvs_version=2019